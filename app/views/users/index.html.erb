<h1><%= full_title(yield(:title))%></h1>

<table>
  <tr>
  <th>Name</th>
  <th>Email</th>
  <th></th>
  <th></th>
  <th></th>
  </tr>

  <% @users.each do |user| %>

    <tr>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= link_to 'Show', user_path(user) %></td>
      <td><%= link_to 'Edit', edit_user_path(user) %></td>
      <td><%= link_to 'Destroy', user_path(user), :method => :delete, :confirm => 'Are you sure?'%></td> 
      <!-- in rails 4 -> method: :delete, data: {confirm: "Are you sure?"} -->
    </tr>
  <% end %>
</table>

<br />

<%= link_to 'New User', new_user_path %>